<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    
    <AbsoluteLayout android:layout_height="600px" android:layout_width="400px">
	    <jp.co.hybitz.otheris.MainView
	        android:id="@+id/main_view"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:focusable="true">
		    <requestFocus/>
		</jp.co.hybitz.otheris.MainView>
	</AbsoluteLayout>
    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
        <Button android:id="@+id/left" android:text="＜＜" android:layout_width="130px" android:layout_height="wrap_content"/>
        <Button android:id="@+id/rotate" android:text="回転" android:layout_width="130px" android:layout_height="wrap_content" android:layout_marginLeft="5px"/>
        <Button android:id="@+id/right" android:text="＞＞" android:layout_width="130px" android:layout_height="wrap_content" android:layout_marginLeft="5px"/>
	</LinearLayout>
</LinearLayout>
